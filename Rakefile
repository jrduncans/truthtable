# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/truthtable.rb'

Hoe.new('truthtable', TruthTable::VERSION) do |p|
  p.rubyforge_name = 'truthtable'
  p.summary = 'Truth Table builder'
  p.description = p.paragraphs_of('README.txt', 2..5).join("\n\n")
  p.url = p.paragraphs_of('README.txt', 0).first.split(/\n/)[1..-1]
  p.changes = p.paragraphs_of('History.txt', 0..1).join("\n\n")
end

# vim: syntax=Ruby
